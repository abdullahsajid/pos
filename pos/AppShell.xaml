<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="pos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:pos"
    xmlns:pages="clr-namespace:pos.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.FlyoutBackgroundColor="White"
    Shell.FlyoutWidth="60"
    Title="pos">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="home.png"
        Route="MainPage"
    />

    <ShellContent
        Title="Product"
        ContentTemplate="{DataTemplate pages:AddProductPage}"
        Icon="grid.png"
        Route="AddProductPage" 
    />

    <ShellContent
        Title="Order"
        ContentTemplate="{DataTemplate pages:OrderPage}"
        Icon="clipboard.png"
        Route="OrderPage"
    />

    <ShellContent
        Title="Deals"
        ContentTemplate="{DataTemplate pages:AddDealPage}"
        Icon="grid.png"
        Route="AddDealPage"
        />

</Shell>
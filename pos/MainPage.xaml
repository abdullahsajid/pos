<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pos.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FFF3EA"
             xmlns:data="clr-namespace:pos.Data"
             xmlns:models="clr-namespace:pos.Models"
             xmlns:vm="clr-namespace:pos.ViewModels"
             x:DataType="vm:HomeViewModel">
    <Grid ColumnDefinitions=".40*, .60*">
        <Grid Grid.Column="0" Margin="20" RowDefinitions="Auto, *, Auto" BackgroundColor="White">
            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Grid Grid.Row="0" Padding="08" BackgroundColor="#753F21">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Name" TextColor="White" FontAttributes="Bold" Padding="10" />
                    <Label Grid.Column="1" Text="Qty" TextColor="White" FontAttributes="Bold" Padding="10" />
                    <Label Grid.Column="2" Text="Price" TextColor="White" FontAttributes="Bold" Padding="10" />
                    <Label Grid.Column="3" Text="Total" TextColor="White" FontAttributes="Bold" Padding="10" />
                </Grid>
                <BoxView Grid.Row="0" HeightRequest="1" BackgroundColor="#E0E0E0" VerticalOptions="End" />
            
                <CollectionView Grid.Row="1"  ItemsSource="{Binding CartItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:CartModel">
                            <Grid Padding="20" RowSpacing="0" ColumnSpacing="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Name}" TextColor="Black" Padding="10" />
                                <Entry 
                                    Grid.Column="1"
                                    Text="{Binding Quantity, Mode=TwoWay}"
                                    TextColor="Black"
                                    Keyboard="Numeric"
                                    HorizontalTextAlignment="Center"
                                    WidthRequest="60"
                                />
                                <Label Grid.Column="2" Text="{Binding Price, StringFormat='{0:C}'}" Padding="10" TextColor="Black" HorizontalTextAlignment="Center" />
                                <Label Grid.Column="3" Text="{Binding Total, StringFormat='{0:C}'}" Padding="10" TextColor="Black" HorizontalTextAlignment="End" />
                                <ImageButton
                                    Source="cross.png"
                                    Grid.Column="4"
                                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}} ,Path=BindingContext.RemoveFromCartCommand}"
                                    CommandParameter="{Binding .}"
                                    ToolTipProperties.Text="Remove item from cart"
                                    HorizontalOptions="End"
                                    VerticalOptions="Start"
                                    HeightRequest="10"
                                    WidthRequest="10"
                                />
                                <BoxView Grid.ColumnSpan="4" HeightRequest="1" BackgroundColor="#E0E0E0" VerticalOptions="End" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="2">
                <Border Padding="5, 10" Margin="10" StrokeShape="RoundRectangle 10">
                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
                          ColumnDefinitions="2*, 3*"
                          >
                        <Label 
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Payment" 
                            FontSize="22"
                            TextColor="Black" 
                        />
                        <Entry
                            Grid.Row="0"
                            Grid.Column="1"
                            FontSize="22"
                            Text="{Binding Payment, Mode=TwoWay}"
                            Keyboard="Numeric"
                            HorizontalTextAlignment="Center"
                            TextColor="Black"
                        />
                        <Label 
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Change" 
                            FontSize="22"
                            TextColor="Black" 
                        />
                        <Label 
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="22"
                            Text="{Binding Change}" 
                            TextColor="Black" 
                            HorizontalTextAlignment="Center"
                        />
                        <Label 
                            Grid.Row="2"
                            Grid.Column="0"
                            Text="Total" 
                            FontSize="23"
                            TextColor="Black"
                            FontAttributes="Bold"
                        />
                        <Label 
                            Grid.Row="2"
                            Grid.Column="1"
                            FontSize="23"
                            Text="{Binding Total, StringFormat='{0:C}'}" 
                            TextColor="Black" 
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                        />
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </Grid>
        <Grid Grid.Column="1" RowDefinitions="Auto, Auto, *" RowSpacing="10">
            <CollectionView Grid.Row="1" x:Name="CategoryListView" ItemsSource="{Binding Categories}" HorizontalOptions="Center" HorizontalScrollBarVisibility="Default">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:CategoryModel">
                        <Border Padding="20,10"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10"
                                BackgroundColor="#753F21">
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="{Binding Name}"/>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Grid Grid.Row="2" RowDefinitions="Auto, Auto, Auto">
                <CollectionView x:Name="ProductListView" ItemsSource="{Binding Products}" VerticalOptions="Center">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="4" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ProductModel">
                            <Border Padding="20,10"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 10"
                                    >
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding Name}" TextColor="black" FontSize="18"/>
                                    <Label Text="{Binding Price, StringFormat='{0:C}'}" FontSize="24" TextColor="black"/>
                                    <Button Text="Add to cart" 
                                        BackgroundColor="#753F21" 
                                        TextColor="White" 
                                        CornerRadius="10" 
                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}} ,Path=BindingContext.AddToCartCommand}"
                                        CommandParameter="{Binding .}"/>
                                </VerticalStackLayout>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}} ,Path=BindingContext.AddToCartCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <BoxView
                    HorizontalOptions="Fill"
                    IsVisible="{Binding IsLoading}"
                    Opacity="0.3"
                    VerticalOptions="Fill"
                    Color="#753F21" />

                <ActivityIndicator
                    HeightRequest="25"
                    HorizontalOptions="Center"
                    IsRunning="{Binding IsLoading}"
                    VerticalOptions="Center"
                    WidthRequest="25"
                    Color="Maroon" />

            </Grid>
        </Grid>
    </Grid>
</ContentPage>